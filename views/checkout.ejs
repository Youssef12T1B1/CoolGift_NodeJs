<%- include('./partials/head.ejs') %>
 
<%- include('./partials/nav.ejs') %>

<% if (typeof cart !== 'undefined') {%>
<table class="table">
<tr>
    <th>Image</th>
    <th>Title</th>
    <th>Price</th>
    <th>Quantity</th>
    <th></th>
    <th>Total</th>


</tr>
<% cart.forEach(function(product){%>
    <% const tot = parseFloat(product.qty * product.price)%>
    <tr>
        <td><img style="width: 100px;height: 50px;" src="<%= product.Image %>" alt=""></td>
        <td> <%= product.title %></td>
        <td> <%= product.price %> DH</td>
        <td> <%= product.qty %></td>
        <td> <a href="/cart/update/<%= product.title %>?action=add">+</a>
         <a href="/cart/update/<%= product.title %>?action=remove">-</a>
         <a href="/cart/update/<%= product.title %>?action=clear">Clear</a></td>
   <td><%= tot %></td>
    </tr>

    <%})%>
</table>

    <% }else { %>
<h3 class="text-center">Your cart is empty</h3>
    <% } %>