
 <%- include('./partials/head.ejs') %>
 
 <%- include('./partials/nav.ejs') %>



<form action="/signup" method="post"  class="loginForm">
    
    <h2> <i class="fas fa-user-plus"></i> Sign Up</h2>
    <%- include ('./partials/messages') %>
<input type="text" name="username" id="username" placeholder="Username"  
value="<%= typeof username != 'undefined' ? username: '' %>"
/> 

<input type="text" name="email" id="email" placeholder="Email"  required
value="<%= typeof email != 'undefined' ? email: '' %>"
/> 

<input type="password" name="password" id="password" placeholder="Password"  required
value="<%= typeof email != 'undefined' ? password: '' %>"
> 

<input type="password" name="password2" id="password2" placeholder="Confirm Password" required
value="<%= typeof email != 'undefined' ? password2: '' %>"> 


<button class="btn brown darken-1" type="submit">Sign up</button><br>
<div style="margin-top: 20px;">   <span>already have an account? </span><a href="/login">Log In</a> </div>


</form>