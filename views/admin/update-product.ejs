     <form action="/api/products" method="post"  id="UpdateProject" class="loginForm">
        <input type="hidden" name="id" value="<%= product._id %>">
     
             <input type="text" style="color: aliceblue; background-color: black;" name="title" id="title"  value="<%= product.title %>">
             <label for="title">title</label>
 
     
             <input type="text" style="color: aliceblue;background-color: black;" name="description" id="description" value="<%= product.description %>"> 
             <label for="description">description</label>
     
             <label for="price">price</label>
             <input type="number" step="0.01" style="color: aliceblue;background-color: black;" name="price" id="price"  value="<%= product.price %>"> 
            

             <label for="description">Category</label>
             <select name="category" id="category" style="margin-bottom: 40px; width: 100%; height: 40px;">
               
                <% for (var i=0 ; i< categories.length;++i){%>
                    <option value="<%= categories[i].title %>"  <%= product.category == categories[i].title ? 'selected':''  %>><%= categories[i].title %></option>
                    
                    
                    <% } %>
               
                 
                
             </select>

             <input type="file" name="image" id="image"  value="<% product.image %>">
             <img  style ='width: 80 ; height:80px' src="/Images_Product/<%= product._id %>/<%= product.image %>"  id="imgpreview" alt="" >
    
     
         <input type="submit" value="Save" class="btn">
         <a href="/" class="btn orange">Cancel</a>
  
     
     </form>

